<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">


    <RelativeLayout


        android:id="@+id/no1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:background="#851E1E">

        <ImageView
            android:id="@+id/saldo"
            android:layout_width="@dimen/_50ssp"
            android:layout_height="@dimen/_50ssp"
            android:layout_marginLeft="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_30ssp"
            android:src="@drawable/saldo11" />

        <TextView
            android:id="@+id/txtsaldo"
            android:layout_toRightOf="@+id/saldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp.50.000"
            android:layout_marginLeft="@dimen/_1sdp"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_40sdp"
            />

        <TextView
            android:id="@+id/judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Link Apa Saja!!"
            android:textSize="@dimen/_20ssp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_115sdp"
            />

        <Button
            android:id="@+id/btn_profile"
            android:layout_toRightOf="@+id/judul"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_30sdp"
            app:backgroundTint="@color/black"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/pp"
            android:layout_marginTop="@dimen/_10ssp"
            android:onClick="pindahprofil"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/no2"
        android:layout_below="@+id/no1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >




        <RelativeLayout
            android:id="@+id/cari"
            android:layout_width="@dimen/_380sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_height="@dimen/_40ssp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/selector1" >


            <RelativeLayout
                android:id="@+id/pencarian"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                app:backgroundTint="@color/purple_200"
                android:background="@drawable/cari"/>
            <TextView
                android:id="@+id/tex3"
                android:layout_toRightOf="@id/pencarian"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semua Pembayaran Bisa di Sini"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_3sdp"
                />

        </RelativeLayout>

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/no2"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

    <RelativeLayout
        android:id="@+id/no3"
        android:layout_below="@+id/no2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_600sdp"
        android:background="#C60944">

        <RelativeLayout
            android:id="@+id/P1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_235sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/selector2">


            <ImageButton
                android:id="@+id/btn_binding"
                android:layout_width="@dimen/_50ssp"
                android:layout_height="@dimen/_50ssp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_35ssp"
                android:background="@drawable/hp" />

            <TextView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_binding"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Pulsa"
                android:textColor="@color/black"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/enam"
                android:layout_width="@dimen/_50ssp"
                android:layout_height="@dimen/_50ssp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_35ssp"
                android:layout_toRightOf="@id/btn_binding"
                android:src="@drawable/listrik" />

            <TextView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/enam"
                android:layout_marginLeft="@dimen/_80sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:text="Listrik"
                android:textColor="@color/black"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/tujuh"
                android:layout_width="@dimen/_50ssp"
                android:layout_height="@dimen/_70ssp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15ssp"
                android:layout_toRightOf="@id/enam"
                android:src="@drawable/game" />

            <TextView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tujuh"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_141sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:text="Game"
                android:textColor="@color/black"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/mot"
                android:layout_width="@dimen/_50ssp"
                android:layout_height="@dimen/_70ssp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_15ssp"
                android:layout_toRightOf="@id/tujuh"
                android:src="@drawable/telepon" />

            <TextView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tujuh"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_209sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:text="Telepon"
                android:textColor="@color/black"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/token"
                android:layout_width="@dimen/_50ssp"
                android:layout_height="@dimen/_50ssp"
                android:layout_below="@+id/tujuh"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_60sdp"
                android:src="@drawable/bpjs" />

            <TextView
                android:id="@+id/bilan"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_below="@id/token"
                android:layout_marginLeft="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:text="BPJS"
                android:textColor="@color/black"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/bis"
                android:layout_width="@dimen/_60ssp"
                android:layout_height="@dimen/_70sdp"
                android:layout_below="@+id/tujuh"
                android:layout_marginLeft="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_45sdp"
                android:layout_toRightOf="@id/token"
                android:src="@drawable/bus" />
            <TextView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_below="@id/bis"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_90sdp"
                android:layout_marginTop="@dimen/_1ssp"
                android:text="Bis"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_17ssp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_below="@id/pesawat"
                android:layout_marginLeft="@dimen/_200sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:text="Kereta"
                android:textColor="@color/black"
                android:textSize="@dimen/_17ssp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/pesawat"
                android:layout_width="@dimen/_60ssp"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginLeft="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_120sdp"
                android:layout_toRightOf="@id/bis"
                android:src="@drawable/kereta" />




        </RelativeLayout>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="-200dp">

        <LinearLayout
            android:id="@+id/lyuscrol"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:background="#C5CAE9"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sc1"
                android:layout_marginTop="10dp"
                android:layout_width="340sp"
                android:layout_height="130sp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/satu" />

            <ImageView
                android:id="@+id/sc2"
                android:layout_width="340sp"
                android:layout_height="130sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/dua" />

            <ImageView
                android:id="@+id/sc3"
                android:layout_width="340sp"
                android:layout_height="130sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/tiga" />

            <ImageView
                android:id="@+id/sc4"
                android:layout_width="340sp"
                android:layout_height="130sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/empat" />
        </LinearLayout>
    </HorizontalScrollView>
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>